<div class="jumbotron">
    <h1>Today's Menu:</h1>
</div>
<div class="container">
    <div class="row">
        {{!-- <div class="col md-1"></div> --}}
        <div class="col md-6 well">
            <h2>Burgers ready to be devoured!</h2>
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col md-6 well">
            <h2>Burgers destroyed! Yum</h2>
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
        {{!-- <div class="col md-6"></div> --}}
    </div>
    <h3>Add a new burger to the menu:</h3>
    <form class="create-form form-horizontal">

        <div class="form-group">
            <label for="burger">New Burger:</label>
            <input type="text" id="burger" name="name">
        </div>

        <div class="form-group">
        <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1"> Eaten!<br>
            <input type="radio" name="devoured" value="0"> Not eaten yet!
        </div>

        <button type="submit">Add Burger to Menu</button>
    </form>
</div>